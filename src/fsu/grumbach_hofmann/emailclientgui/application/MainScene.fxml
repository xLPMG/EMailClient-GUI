                                 <content>
                                    <AnchorPane fx:id="messageDisplayPane" style="-fx-background-radius: 5 5 5 5;" styleClass="tertiarySystemBackground" stylesheets="@../style/DarkTheme.css">
                                       <children>
                                          <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <BorderPane VBox.vgrow="ALWAYS">
                                                   <left>
                                                      <Label fx:id="senderLabel" styleClass="secondaryLabel" text="Sender" wrapText="true" BorderPane.alignment="CENTER" />
                                                   </left>
                                                   <right>
                                                      <Label fx:id="dateLabel" styleClass="tertiaryLabel" text="Date" wrapText="true" BorderPane.alignment="CENTER" />
                                                   </right>
                                                </BorderPane>
                                                <Label fx:id="subjectLabel" styleClass="secondaryLabel" text="Subject" wrapText="true" />
                                                <HBox VBox.vgrow="ALWAYS">
                                                   <children>
                                                      <Label fx:id="toTextLabel" styleClass="secondaryLabel" text="To: " />
                                                      <Label fx:id="recipientsLabel" styleClass="tertiaryLabel" text="recipients" wrapText="true">
                                                         <padding>
                                                            <Insets bottom="3.0" />
                                                         </padding></Label>
                                                   </children>
                                                </HBox>
                                                <Separator fx:id="messageSperarator" style="-fx-background-color: black;" />
                                                <Label fx:id="contentLabel" styleClass="secondaryLabel" text="Text" wrapText="true">
                                                   <padding>
                                                      <Insets top="3.0" />
                                                   </padding></Label>
                                             </children>
                                             <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                             </padding>
                                          </VBox>
                                       </children>
                                    </AnchorPane>
                                 </content>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" />
                                 </padding></ScrollPane>
                           </children>
                        </VBox>
                    </items>
                  </SplitPane>
               </center>
            </BorderPane>
         </children>
      </HBox>
  </children>
   <stylesheets>
      <URL value="@../style/DarkTheme.css" />
      <URL value="@../style/MainScene.css" />
   </stylesheets>
