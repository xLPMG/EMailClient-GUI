                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="455.0" layoutY="4.0" styleClass="secondaryLabel" text="Luca-Philipp Grumbach &amp; Richard Hofmann, 2022-23" />
                     </children>
                  </Pane>
               </bottom>
               <center>
                  <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                    <items>
                        <VBox styleClass="tertiarySystemBackground">
                           <children>
                              <Pane maxHeight="-Infinity" prefHeight="50.0" styleClass="secondarySystemBackground" VBox.vgrow="ALWAYS">
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label id="inboxLabel" fx:id="inboxLabel" styleClass="primarylabel" text="Inbox" wrapText="true" VBox.vgrow="ALWAYS">
                                             <font>
                                                <Font size="20.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="totalMessagesLabel" styleClass="secondaryLabel" text="No messages found" VBox.vgrow="ALWAYS" />
                                       </children>
                                       <padding>
                                          <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </Pane>
                              <ListView fx:id="messagesList" styleClass="secondarySystemBackground" VBox.vgrow="ALWAYS">
                              
                              </ListView>
                           </children>
                        </VBox>
                        <VBox styleClass="tertiarySystemBackground">
                           <children>
                              <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" styleClass="secondarySystemBackground" VBox.vgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0">
                                       <children>
                                          <Button fx:id="btnReceiveMails" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="imageButton">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                             </padding>
                                             <HBox.margin>
                                                <Insets left="5.0" />
                                             </HBox.margin>
                                          </Button>
                                          <Button fx:id="btnWriteMail" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="imageButton">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                             </padding>
                                             <HBox.margin>
                                                <Insets left="5.0" />
                                             </HBox.margin>
                                          </Button>
                                          <Button mnemonicParsing="false" text="Archive">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                             </padding>
                                             <HBox.margin>
                                                <Insets left="5.0" />
                                             </HBox.margin>
                                          </Button>
                                          <Button mnemonicParsing="false" text="Delete">
                                             <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                             </padding>
                                             <HBox.margin>
                                                <Insets left="5.0" />
                                             </HBox.margin>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </Pane>
