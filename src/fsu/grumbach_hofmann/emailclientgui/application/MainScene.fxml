<VBox id="mainContainer" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="250.0" styleClass="systemBackground">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" styleClass="primarylabel" text="Accounts">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" top="40.0" />
                     </padding>
                  </Label>
                  <ChoiceBox id="accountsDropdown" fx:id="accountsDropdown" prefWidth="150.0" styleClass="button">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </ChoiceBox>
               </children>
            </VBox>
            <BorderPane prefHeight="700.0" HBox.hgrow="ALWAYS">
               <top>
                  <MenuBar id="menubar" minHeight="25.0" styleClass="systemBackground" BorderPane.alignment="CENTER">
                     <menus>
                        <Menu fx:id="accountsMenuItem" mnemonicParsing="false" text="Settings">
                          <items>
                            <MenuItem fx:id="addAccountItem" mnemonicParsing="false" text="Add account" />
                              <MenuItem fx:id="removeAccountItem" mnemonicParsing="false" text="Remove account" />
                          </items>
                        </Menu>
                     </menus>
                  </MenuBar>
               </top>
               <bottom>
                  <Pane prefHeight="25.0" prefWidth="900.0" styleClass="secondarySystemBackground" BorderPane.alignment="CENTER_RIGHT">
