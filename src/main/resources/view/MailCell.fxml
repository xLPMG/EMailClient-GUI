<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="cellMainPane" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: transparent; -fx-border-color: #1C1C1EFF; -fx-border-width: 1px 0px 0px 0px; -fx-background-radius: 5 5 5 5;" stylesheets="@../style/DarkTheme.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="cellMainBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane fx:id="cellBorderPane" VBox.vgrow="NEVER">
               <left>
                  <Label fx:id="cellLabelSender" style="-fx-font-size: 16;" styleClass="primarylabel" text="Sender" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </left>
               <right>
                  <Label fx:id="cellLabelDate" alignment="CENTER_RIGHT" style="-fx-font-size: 13;" styleClass="secondaryLabel" text="Date Sent" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
            <Label fx:id="cellLabelSubject" style="-fx-font-size: 14;" styleClass="secondaryLabel" text="Subject" VBox.vgrow="NEVER">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="cellLabelContent" style="-fx-font-size: 13;" styleClass="tertiaryLabel" text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt.." wrapText="true" VBox.vgrow="NEVER" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
